{
  "version": "3.0.1",
  "author": {
    "name": "Infinite Red",
    "email": "npm@infinite.red",
    "url": "https://github.com/infinitered/ignite"
  },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "description": "Axios + standardized errors + request/response transforms.",
  "devDependencies": {
    "@babel/preset-env": "^7.22.6",
    "@semantic-release/git": "^7.0.5",
    "@types/node": "20.3.3",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.1.0",
    "husky": "^1.3.1",
    "jest": "^29.6.0",
    "lint-staged": "^8.1.0",
    "np": "3.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^11.8.0",
    "prettier": "^1.15.3",
    "rollup": "^0.59.1",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^8.4.1",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-uglify": "^3.0.0",
    "semantic-release": "^15.12.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "5.1.6"
  },
  "files": [
    "dist/apisauce.js",
    "dist/umd/apisauce.js",
    "apisauce.d.ts"
  ],
  "keywords": [
    "axios",
    "api",
    "network",
    "http"
  ],
  "license": "MIT",
  "main": "./dist/apisauce.js",
  "name": "apisauce",
  "repository": {
    "type": "git",
    "url": "https://github.com/infinitered/apisauce.git"
  },
  "scripts": {
    "build": "BABEL_ENV=production rollup -c",
    "clean": "rm -rf dist",
    "compile": "tsc -p tsconfig.json",
    "prepare": "npm-run-all compile build",
    "dist": "npm-run-all clean compile build test",
    "lint": "tslint -p .",
    "test": "npm-run-all compile test:unit",
    "test:unit": "jest",
    "ci:publish": "yarn semantic-release",
    "semantic-release": "semantic-release",
    "format": "prettier --write \"{**/*.ts,.circleci/**/*.js}\" --loglevel error && tslint -p . --fix",
    "example": "node ./examples/github.js"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "types": "./apisauce.d.ts",
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": "package.json",
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
